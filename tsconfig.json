{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["ES5", "DOM"],
        "allowJs": true,
        "jsx": "react",
        "outDir": "dist",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true ,
        "sourceMap": true
    },
    "include": [
        "app/**/*",
        "types/*.d.ts",
        "server/**/*",
        "*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}